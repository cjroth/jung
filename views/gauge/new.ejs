<% layout('/global') %>
<% stylesheet('/stylesheets/gauge/new.css') %>
<% script('/javascripts/gauge/new.js') %>

<div class="row">
  <div class="span6">

    <form class="form form-gauge" action="/gauge/new" method="POST" data-success="/gauge/:id">
      <input name="name" type="text" placeholder="Name your gauge">
      <button type="submit" class="btn btn-primary">Create Gauge</button>
    </form>

  </div>
  <div class="span6">
    <% for (var i in gauges) { %>
      <%- gauges[i].render() %>
    <% } %>
  </div>
</div>